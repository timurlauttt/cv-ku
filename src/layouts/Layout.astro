---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "A personal blog built with Astro and Tailwind CSS",
  image = "/social.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Analytics 4 -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-J6XVDXLMKH"
      is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-J6XVDXLMKH");
    </script>
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Urip Yoga Pangestu, web developer, portfolio, CV, Laravel, Django, React.js, Astro, Sistem Informasi, Telkom University Purwokerto, Purwokerto, front-end, back-end, fullstack developer, Indonesia"
    />
    <meta name="author" content="Urip Yoga Pangestu" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="id" />
    <meta name="geo.region" content="ID-JT" />
    <meta name="geo.placename" content="Purwokerto" />
    <meta
      name="google-site-verification"
      content="googlea556b511026fc3a7.html"
    />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icons -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />

    <!-- Theme Color -->
    <meta name="theme-color" content="#ffffff" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Urip Yoga Pangestu",
        "url": "https://cv-uripyogapangestu.vercel.app/",
        "image": "https://cv-uripyogapangestu.vercel.app/me.png",
        "jobTitle": "Information Systems Student & Web Developer",
        "description": "Undergraduate Information Systems student at Telkom University Purwokerto with a strong interest in Web and Fullstack Development.",
        "alumniOf": {
          "@type": "EducationalOrganization",
          "name": "Telkom University Purwokerto"
        },
        "sameAs": [
          "https://www.linkedin.com/in/urip-yoga-pangestu-65a541231/",
          "https://github.com/timurlauttt",
          "https://my-portofolio-guwa.vercel.app/"
        ],
        "email": "2211103102@ittelkom-pwt.ac.id",
        "telephone": "+6285861466287",
        "knowsAbout": [
          "Laravel",
          "Django",
          "React",
          "Web Development",
          "Fullstack Development"
        ]
      }
    </script>

    <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>
